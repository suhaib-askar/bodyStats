#site-container.context-loader-container{"data-pjax-container" => ""}
  .auth-form
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .auth-form-header
        %h1 Forgot password
      .auth-form-body
        = f.label :email
        = f.email_field :email, autofocus: true, placeholder: "Enter your email address", class: "input-block"
        = f.submit "Reset", class: "button"




