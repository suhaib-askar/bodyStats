= @project.name
= @project.description

.boxed-group
  %h3 Your items
  .boxed-group-inner
    %br
    - unless @project.track_items.empty?
      %div.track-items-table
        - @project.track_items.each do |item|
          %div.track-cont
            = simple_form_for([@project, item]) do |f|
              %dl.form.track
                %dd= f.input :name, label: false, placeholder: "Item name", autofocus: true, required: false, input_html: { class: "track-item-name" }
                %dl.form.track
                  %dd= f.association :unit, label_method: :full_en,  prompt: "Unit",  value_method: :id, label: false, input_html: { class: "form-control track-item-combo" }
            = button_to 'X', [@project, item], method: :delete, :name => 'delete', data: { confirm: 'Вы уверены?' }, class: "track-item-delete button danger"
    - else 
      %h2 Tracking list is empty.