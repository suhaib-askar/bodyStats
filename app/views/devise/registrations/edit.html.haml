.margin-content-2
  .container
    = render "shared/settings_menu_container"
    .settings-content
      .boxed-group
        %h3 Public profile
        .boxed-group-inner.boxed-profile.clearfix
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            .form-left
              %dl.form.edit-profile-avatar
                %dt
                  %label= link_to 'Profile picture', 'http://gravatar.com/emails', target: :_blank, style:"text-decoration: underline;"
                %dd.avatar-upload-container.clearfix
                  = gravatar_for resource, size: 70
              %dl.form
                %dd= f.input :name, label: 'Name', autofocus: true, required: false
              %dl.form
                %dd= f.input :email, label: 'Email'
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %div
                  Currently waiting confirmation for: #{resource.unconfirmed_email}
              %dl.form
                %dd= f.input :password, label: 'Password', autocomplete: "off", hint: "(leave blank if you don't want to change it)"
              %dl.form
                %dd= f.input :password_confirmation, label: 'Password confirmation', autocomplete: "off"
              %dl.form
                %dd= f.input :current_password, label: 'Current password', autocomplete: "off", hint: "(we need your current password to confirm your changes)"
              %p.form-footer
                = f.button :submit, "Update profile", class: "button primary"
      .boxed-group.dangerzone
        %h3 Delete account
        .boxed-group-inner
          %p{style: "padding: 10px;" } Once you delete your account, there is no going back. Please be certain.
          %p
            = button_to "Delete your account", registration_path(resource_name), data: { confirm: "Are you sure you want to do this?" }, method: :delete, class: "button danger"











